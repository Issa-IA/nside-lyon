<odoo>
<data>
    <record id="view_project_task_form" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                

                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='date_deadline']" position="before">
                                <field name="date_from" class="oe_inline" widget="daterange" />
                                <field name="date_to" class="oe_inline" widget="daterange"></field>
                </xpath>

            </field>
</record>



</data>
</odoo>
